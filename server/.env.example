# 服务器配置
PORT=3001

# API 配置
# 通义千问 API Key (阿里百炼平台)
# 获取地址：https://dashscope.console.aliyun.com/
DASHSCOPE_API_KEY=sk-your_dashscope_api_key_here
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# 魔搭社区 ModelScope API 配置
# 获取地址：https://www.modelscope.cn/my/myaccesstoken
MODELSCOPE_API_KEY=ms-your_modelscope_api_key_here
MODELSCOPE_BASE_URL=https://api-inference.modelscope.cn/v1

# OpenAI API Key (备用)
# 获取地址：https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# 请求超时设置（毫秒）
REQUEST_TIMEOUT=60000

# 跨域配置
CORS_ORIGIN=http://localhost:5173

# 环境
NODE_ENV=development

# JWT 密钥配置（用于用户认证）
# 请生成一个强随机字符串，至少32位
JWT_SECRET=your_jwt_secret_key_here_at_least_32_characters_long