{
  "name": "chat-studio-server",
  "type": "nodejs",
  "buildCommand": "npm install",
  "startCommand": "npm start",
  "environment": {
    "NODE_ENV": "production"
  },
  "port": 3001,
  "healthCheck": {
    "path": "/health",
    "timeout": 30
  },
  "resources": {
    "memory": "512MB",
    "cpu": "0.5"
  }
}